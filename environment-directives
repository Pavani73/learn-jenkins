pipeline {
    agent { node { label 'workstation'} }

    environment {
          SSH = credentials('SSH')
          DEMO_URL = "google.com"
          }
     options {
         ansiColor('xterm')
         }

     parameters { string(name: 'APP_INPUT', defaultValue:'', description: 'JUST INPUT') }

     text

    stages {
        stage('environment variable demo') {
            steps {
                echo 'environment credentials'
                sh 'env'
            }
        }
    }
}